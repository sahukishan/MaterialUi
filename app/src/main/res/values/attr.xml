<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularImageView">
        <attr name="border" format="boolean"></attr>
        <attr name="border_width" format="dimension"></attr>
        <attr name="border_color" format="color"></attr>
        <attr name="shadow" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="Theme">
        <attr name="circularImageViewStyle" format="reference"></attr>
    </declare-styleable>
    <declare-styleable name="CustomTextView">
        <attr name="customFont" format="string"/>
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="customButtonFont" format="string"/>
    </declare-styleable>

    <declare-styleable name="CustomEdittext">
        <attr name="customEdittextFont" format="string"/>
    </declare-styleable>

    <declare-styleable name="CircleLayout">
        <attr name="isRotating" format="boolean" />
        <attr name="radius" format="dimension" />
        <attr name="speed" format="integer" />
        <attr name="firstChildPosition">
            <enum name="East" value="0" />
            <enum name="South" value="90" />
            <enum name="West" value="180" />
            <enum name="North" value="270" />
        </attr>
    </declare-styleable>

</resources>
